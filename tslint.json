{
  "defaultSeverity": "none",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "semicolon": [
      false,
      "always"
    ],
    "@typescript-eslint/no-var-requires": 0,
    "trailing-comma": [false, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }],
    "component-selector": [
      false,
      "element",
      [
        "app",
        "passport",
        "exception",
        "layout",
        "header"
      ],
      "kebab-case"
    ],
    "no-console": false,
    "one-line": [
      false,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ]
  }
}
